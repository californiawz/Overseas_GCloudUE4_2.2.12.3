<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MSDK.Policy.Window.Inner"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/MSDK.Policy.Title"
        android:id="@+id/msdk_permission_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/msdk_permission_layout_title"
        android:textAlignment="center"/>

    <TextView
        android:layout_centerHorizontal="true"
        style="@style/MSDK.Policy.Content.Window"
        android:id="@+id/msdk_permission_content_tv"
        android:layout_marginTop="@dimen/msdk_policy_positive_space_width_16dp"
        android:layout_below="@id/msdk_permission_title_tv"
        android:scrollbars="vertical" />

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/msdk_policy_layout_button_group_bg">
        <RelativeLayout
            android:id="@+id/msdk_permission_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/msdk_permisson_layout_button_group_height">

            <Button
                android:layout_centerInParent="true"
                style="@style/MSDK.Policy.Confirm.Button.Large"
                android:id="@+id/msdk_permission_confirm_btn"
                android:text="@string/msdk_permission_layout_confirm_button_text" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>