<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_0"
            style="@style/MSDK.VerificationCode.TextView" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_1"
            style="@style/MSDK.VerificationCode.TextView" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_2"
            style="@style/MSDK.VerificationCode.TextView" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_3"
            style="@style/MSDK.VerificationCode.TextView" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_4"
            style="@style/MSDK.VerificationCode.TextView" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_5"
            style="@style/MSDK.VerificationCode.TextView" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:orientation="horizontal">


        <View
            android:layout_width="@dimen/msdk_bind_verify_code_view_width"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/msdk_inner_bg_color_000000" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/msdk_bind_verify_code_view_width"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/msdk_inner_bg_color_000000" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/msdk_bind_verify_code_view_width"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/msdk_inner_bg_color_000000" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/msdk_bind_verify_code_view_width"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/msdk_inner_bg_color_000000" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/msdk_bind_verify_code_view_width"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/msdk_inner_bg_color_000000" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <View
            android:layout_width="@dimen/msdk_bind_verify_code_view_width"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/msdk_inner_bg_color_000000" />


    </LinearLayout>

    <com.itop.gcloud.msdk.api.login.ui.MSDKVerifyCodeEditText
        android:id="@+id/edit_text_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/msdk_inner_bg_color_ffffffff"
        android:textColor="@color/msdk_inner_bg_color_ffffffff"
        android:longClickable="false"
        android:maxLength="6"
        android:inputType="number" />
</RelativeLayout>