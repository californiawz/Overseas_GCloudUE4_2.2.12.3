<!--            android:textSize="@dimen/msdk_bind_ui_text_size_10">-->

<!--        </TextView>-->
    </LinearLayout>

    <Button
        android:id="@+id/msdk_bind_ui_email_next_button"
        style="@style/MSDK.Bind.Button.Normal.Clickable"
        android:layout_width="@dimen/msdk_bind_next_button_with"
        android:layout_height="@dimen/msdk_bind_next_button_height"
        android:layout_below="@id/msdk_bind_email_input_edittext"
        android:layout_marginTop="@dimen/msdk_bind_space_positive_90"
        android:enabled="false"
        android:text="@string/msdk_bind_button_next" />


</RelativeLayout>